{
    "name": "hono",
    "type": "module",
    "scripts": {
        "dev": "dotenv -e .env.local -- tsx watch src/index.ts",
        "build": "tsc",
        "run:firebase": "firebase emulators:start --only functions",
        "serve:firebase": "dotenv -e .env.firebase -- npm run build && npm run run:firebase",
        "serve:local": "dotenv -e .env.local -- npm run build && node dist/index.js",
        "test:local": "dotenv -e .env.test.local -e .env.local -- vitest run",
        "test:firebase": "dotenv -e .env.test.firebase -e .env.firebase -- vitest run",
        "deploy:firebase": "firebase deploy --only functions"
    },
    "engines": {
        "node": "22"
    },
    "main": "dist/index.js",
    "dependencies": {
        "@atproto/api": "^0.18.9",
        "@hono/node-server": "^1.19.6",
        "@hono/swagger-ui": "^0.5.3",
        "@hono/zod-openapi": "^1.2.0",
        "client-s3": "github:aws-sdk/client-s3",
        "firebase-functions": "~6.0.1",
        "hono": "^4.11.3",
        "ioredis": "^5.8.2",
        "sharp": "^0.34.5",
        "vitest": "^4.0.16"
    },
    "devDependencies": {
        "@types/node": "^20.19.27",
        "@types/swagger-ui-dist": "^3.30.6",
        "dotenv-cli": "^11.0.0",
        "firebase-functions-test": "^3.1.0",
        "multiformats": "^13.4.2",
        "path": "^0.12.7",
        "tsx": "^4.7.1",
        "typescript": "^5.8.3"
    }
}
