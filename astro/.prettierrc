{
    "plugins": ["prettier-plugin-astro"],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": "*.{json}",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "arrowParens": "avoid"
}
